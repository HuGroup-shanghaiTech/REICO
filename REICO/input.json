{
    // Bulk
    "PtO-bulk":{                    
                "mix":{
                       "Pt":[1,12],  // Types and number range of elements.
                       "O":[1,12]
                      },
                "vacuum":0,           // Thickness of the vacuum layer.
                "numbers":200         // Number of structures generated.
               },

    // Surface
    "PtO-surface":{
                   "mix":{
                          "Pt":[1,12],
                          "O":[1,12]
                         },
                   "vacuum":8,        // Vacuum layer is in the Z-direction, with a thickness of 8*2=16 Å.
                   "numbers":200
                  },

    // Adsorption
    "PtO-ad":{
              "ad":{
                    "base":{
                            "Pd":[4,16]
                            },
                    "adsorption":{
                            "O":[1,6]
                            }
                   },
              "vacuum":8,
              "numbers":200
             },

    // Cluster
    "CO-cluster":{
                  "cluster":{
                             "C":[1,3],
                             "O":[1,6]
                            },
                  "vacuum":8,         // Vacuum layer is in the x, y, and z directions, with a thickness of 8*2=16 Å.
                  "numbers":100
                 },

    "nproc":8,                        // Number of tasks.
    "output":"random_structure.xyz"   // Output filename.
}
